@page "/products/delete"


@using CRUDInBlazor.Models
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<CRUDInBlazor.Data.MyAppDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>delete</PageTitle>
<h1>delete</h1>

<h3>Are you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    @if(product is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@product.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@product.Price</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Qty</dt>
            <dd class="col-sm-10">@product.Qty</dd>
        </dl>
        <EditForm method="post" Model="products" OnValidSubmit="DeleteProduct" FormName="delete">
            <button type="submit" class="btn btn-danger" disabled="@(products is null)">Delete</button>
            <a href="/products" class="btn btn-outline-secondary">Back to List</a>
        </EditForm>
    }
     
    
</div>